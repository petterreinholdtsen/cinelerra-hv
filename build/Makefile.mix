include global_config


all:
	make -C libmpeg3
	make -C quicktime
	make -C guicast
	make -C mix

clean:
	find -follow \( -name 'core*' \
		-o -name '*.lo' \
		-o -name '*.o' \
		-o -name '*.la' \
		-o -name '*.a' \
		-o -name '*.plugin' \
		-o -name '*.so' \) -exec rm -f {} \;
	find -follow \( -name $(OBJDIR) \) -exec rm -rf {} \;

install:
	rm /usr/bin/mix2000
	strip mix/$(OBJDIR)/mix2000
	cp mix/$(OBJDIR)/mix2000 /usr/bin
