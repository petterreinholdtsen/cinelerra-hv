include global_config


all:
	$(MAKE) -f build/Makefile.asound
	make -C libmpeg3
	make -C quicktime
	make -C guicast
	make -C mix2005

clean:
	find -follow \( -name 'core*' \
		-o -name '*.lo' \
		-o -name '*.o' \
		-o -name '*.la' \
		-o -name '*.a' \
		-o -name '*.plugin' \
		-o -name '*.so' \) -exec rm -f {} \; -prune
	find -follow \( -name $(OBJDIR) \) -exec rm -rf {} \; -prune

install:
	rm /usr/bin/mix2005
	strip mix/$(OBJDIR)/mix2005
	cp mix/$(OBJDIR)/mix2005 /usr/bin
